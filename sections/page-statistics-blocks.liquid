{% if section.settings.enable_section and section.blocks.size > 0 %}
<div class="s-statistics-blocks__outer" {% if section.settings.bg_color != blank %}style="background-color: {{ section.settings.bg_color }}"{% endif %}>
  <div class="container s-statistics-blocks__inner">
    <div class="s-statistics-blocks__list">
      {% for block in section.blocks %}
        {% if block.settings.text != blank %}
          <div class="s-statistics-blocks__item">
            {{ block.settings.text }}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>
{% endif %}

{% schema %}
  {
    "name": "Statistics blocks",
    "tag": "section",
    "class": "s-statistics-blocks",
    "max_blocks": 4,
    "settings": [
      {
        "id": "enable_section",
        "type": "checkbox",
        "label": "Enable section",
        "default": true
      },
      {
        "id": "bg_color",
        "type": "color",
        "label": "Background color"
      }
    ],
    "blocks": [ 
      {
        "type": "statistics_block",
        "name": "Statistic block",
        "settings": [
          {
            "id": "text",
            "type": "richtext",
            "label": "Text"
          }
        ]
      }
    ]
  }
{% endschema %}
