              </button>

              <div class="Collapsible__Inner">
                <div class="Collapsible__Content">
                  <ul class="Linklist">
                    {%- for link in quick_links.links -%}
                      <li class="Linklist__Item {% if link.active %}is-selected{% endif %}">
                        <a href="{{ link.url }}" class="Link Link--primary bh-shop__filter-link {% if link.active %}is-active{% endif %}">{{ link.title | escape }}</a>
                      </li>
                    {%- endfor -%}
                  </ul>
                </div>
              </div>
            </div>
          {%- endif -%}

    	
    	  {%- if quick_links1 != empty -%}
            
    		<hr class="bh-shop__hr mobile_display" style="display: block;">
    
    		<div class="Collapsible Collapsible--padded Collapsible--autoExpand">
              <button type="button" class="Collapsible__Button Heading u-h6 bh-shop__bold" data-action="toggle-collapsible" aria-expanded="false">
              
                {{- quick_links1.title | escape -}} 
                <span class="Collapsible__Plus"></span>
              </button>

              <div class="Collapsible__Inner">
                <div class="Collapsible__Content">
                  <ul class="Linklist">
                    {%- for link1 in quick_links1.links -%}
                      <li class="Linklist__Item">
                        <a href="{{ link1.url }}" class="Link Link--primary bh-shop__filter-link">{{ link1.title }}</a>
                      </li>
                    {%- endfor -%}
                  </ul>
                </div>
              </div>
            </div>
          {%- endif -%}
    
          {%- if has_visible_tags -%}
            {%- if section.settings.filter_mode == 'tag' -%}
              <div class="Collapsible Collapsible--padded Collapsible--autoExpand">
                <button type="button" class="Collapsible__Button Heading u-h6 bh-shop__bold" data-action="toggle-collapsible" aria-expanded="false">
                  <h4 class="bh-shop__category-label"> Filters</h4><span class="Collapsible__Plus"></span>
                </button>

                <div class="Collapsible__Inner">
                  <div class="Collapsible__Content">
                  
                    <ul class="Linklist bh-shop__tag-list">
                      {%- for tag in collection.all_tags -%}
                        {%- if tag contains '__' -%}
                          {%- continue -%}
                        {%- endif -%}
                        <li class="Linklist__Item {% if current_tags contains tag %}is-selected{% endif %}">
                          <button type="button" class="Link Link--primary  {% if current_tags contains tag %}is-active{% endif %}" data-tag="{{ tag | handle }}" data-action="toggle-tag">
                            {{- tag -}}
                          </button>
                        </li>
                      {%- endfor -%}
                    </ul>
                  </div>
                </div>
              </div>
            {%- else -%}
              {%- assign groups = '' -%}

              {%- for tag in collection.all_tags -%}
                {%- assign tag_parts = tag | split: '_' -%}

                {%- if tag_parts.size != 2 -%}
                  {%- continue -%}
                {%- endif -%}

                {%- assign groups = groups | append: tag_parts.first | append: ',' -%}
              {% endfor %}

              {%- assign color_label = 'color,colour,couleur,colore,farbe,색,色,färg,farve' | split: ',' -%}
              {%- assign groups = groups | split: ',' | compact | uniq -%}

              {%- for group in groups -%}
                {%- assign group_downcase = group | downcase -%}

                {%- if color_label contains group_downcase and section.settings.show_filter_color_swatch -%}
                  {%- assign show_color_swatch = true -%}
                {%- else -%}
                  {%- assign show_color_swatch = false -%}
                {%- endif -%}
                <hr class="bh-shop__hr"/>
                <div class="Collapsible Collapsible--padded Collapsible--autoExpand {% if group == 'Categories' %}Collapsible--category{% endif %}">
                  <button type="button" class="Collapsible__Button Heading u-h6 bh-shop__bold"  data-action="toggle-collapsible" aria-expanded="false">
                    {{- group | escape -}} <span class="Collapsible__Plus"></span>
                  </button>
                  <div class="Collapsible__Inner">
                    <div class="Collapsible__Content">
                      <ul class="{% if show_color_swatch %}ColorSwatchList HorizontalList HorizontalList--spacingTight{% else %}Linklist{% endif %}">
                        {%- for tag in collection.all_tags -%}
                          {%- assign tag_parts = tag | split: '_' -%}

                           {%- if tag_parts.size != 2 or tag_parts.first != group -%}
                            {%- continue -%}
                          {%- endif -%} 
                          {%- if show_color_swatch -%}
                            <li class="HorizontalList__Item">
                              {%- assign color_swatch_name = tag_parts.last | handle | append: '.png' -%}
                              {%- assign color_swatch_image = images[color_swatch_name] -%}

                              <button type="button" class="ColorSwatch {% if current_tags contains tag %}is-active{% endif %}" data-tag="{{ tag | handle }}" data-action="toggle-tag" data-tooltip="{{ tag_parts.last | escape }}" style="background-color: {{ tag_parts.last | replace: ' ', '' | downcase }}; {% if color_swatch_image != blank %}background-image: url({{ color_swatch_image | img_url: '64x64' }}){% endif %}">
                                <span class="u-visually-hidden">{{ tag_parts.last }}</span>
                              </button>
                            </li>
                          {%- else -%}
                        	{% assign new_tag = tag %}
                        	{% if tag contains 'Tinctures' %}
                        		{% assign new_tag = 'hemp-oil-tinctures' %}
                        	{% elsif tag contains 'Chews' %}
                        		{% assign new_tag = 'hemp-gummies' %}
                        	{% elsif tag contains 'Patches' %}
                        		{% assign new_tag = 'hemp-patches' %}
                        	{% elsif tag contains 'Topicals' %}
                        		{% assign new_tag = 'hemp-topicals' %}
                        	{% elsif tag contains 'Calm' %}
                        		{% assign new_tag = 'hemp-for-stress-relief' %}
                        	{% elsif tag contains 'Relief' %}
                        		{% assign new_tag = 'hemp-for-relief' %}
                        	{% elsif tag contains 'Sleep' %}
                        		{% assign new_tag = 'hemp-for-sleep' %}
                        	{% elsif tag contains 'Well-being' %}
                        		{% assign new_tag = 'hemp-for-wellness' %}
                        	{% endif %}
                            <li class="Linklist__Item {% if current_tags contains new_tag %}is-selected{% endif %}">
                              <button type="button" class=" bh-shop__filter-link Link Link--primary {% if current_tags contains new_tag %}is-active{% endif %}" data-tag="{{ new_tag }}" data-action="toggle-tag">
                                {% if tag contains 'Tinctures' %}Drops/{% endif %}{{- tag_parts.last -}}
                              </button>
                            </li>
                          {%- endif -%}
                        {%- endfor -%}
                      </ul>
                    </div>
                  </div>
                </div>
              {%- endfor -%}
            {%- endif -%}
          {%- endif -%}
        {%- endcapture -%}

