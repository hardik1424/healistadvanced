<section id="section-{{ section.id }}" class="Section Section--spacingNormal timeline__section bh-timeline-section" data-section-id="{{ section.id }}" data-section-type="timeline">


  <div class="Container timeline-container">

    <div class="Timeline">

      <div class="timeline__title-div">
        <h3 class="SectionHeader__SubHeading Heading u-h6 timeline__main-subtitle">{{ section.settings.timeline_subheading}} </h3>
        <h2 class="SectionHeader__Heading Heading u-h1 timeline__main-title">{{ section.settings.timeline_heading}} </h2>
        <p class="timeline-container__instructions">{{ section.settings.third_heading }}</p>
      </div>

      <div class="Timeline__Nav timeline__nav">
        <div class="Timeline__NavWrapper {% if section.blocks.size <= 3 %}Timeline__NavWrapper--center{% endif %}">
        {%- for block in section.blocks -%}
          <button type="button" data-color="{{ block.settings.bg_color_1 }}" class=" timeline__nav-item Timeline__NavItem {% if forloop.first %}is-selected{% endif %} Link Link--primary" data-index="{{ forloop.index0 }}">
            <span class="Timeline__NavLabel">{{ block.settings.title | truncate: 20 | escape }}</span>
          </button>
        {%- endfor -%}
        </div>
      </div>

      <div class="Timeline__ListItem timeline__list-item">

        {%- for block in section.blocks -%}

        <div {{ block.shopify_attributes }} class=" Timeline__Item {% if forloop.first %}is-selected{% endif %} timeline__item"  data-index="{{ forloop.index0 }}">

        {% if block.settings.hover_title_1 != blank and block.settings.hover_paragraph_1 != blank %}
        <div class="timeline__spotlight-wrapper-1">
          <span class="ShopTheLook__Dot timeline__spotlight"></span>
          <div class="timeline__spotlight--hover-content">
           <span class="timeline__spotlight--title">{{ block.settings.hover_title_1 }}</span>
            <span class="timeline__spotlight--paragraph">{{ block.settings.hover_paragraph_1 }}</span>
          </div>
        </div>
        {% endif %}

        {% if block.settings.hover_title_2 != blank and block.settings.hover_paragraph_2 != blank %}
        <div class="timeline__spotlight-wrapper-2">
          <span class="ShopTheLook__Dot timeline__spotlight"></span>
          <div class="timeline__spotlight--hover-content">
            <span class="timeline__spotlight--title">{{ block.settings.hover_title_2 }}</span>
            <span class="timeline__spotlight--paragraph">{{ block.settings.hover_paragraph_2 }}</span>
          </div>
        </div>
        {% endif %}

        {% if block.settings.hover_title_3 != blank and block.settings.hover_paragraph_3 != blank %}
        <div class="timeline__spotlight-wrapper-3">
          <span class="ShopTheLook__Dot timeline__spotlight"></span>
          <div class="timeline__spotlight--hover-content">
            <span class="timeline__spotlight--title">{{ block.settings.hover_title_3 }}</span>
            <span class="timeline__spotlight--paragraph">{{ block.settings.hover_paragraph_3 }}</span>
          </div>
        </div>
        {% endif %}

        {% if block.settings.hover_title_4 != blank and block.settings.hover_paragraph_4 != blank %}
        <div class="timeline__spotlight-wrapper-4">
          <span class="ShopTheLook__Dot timeline__spotlight"></span>
          <div class="timeline__spotlight--hover-content">
            <span class="timeline__spotlight--title">{{ block.settings.hover_title_4 }}</span>
            <span class="timeline__spotlight--paragraph">{{ block.settings.hover_paragraph_4 }}</span>
          </div>
        </div>
        {% endif %}

        {% if block.settings.hover_title_5 != blank and block.settings.hover_paragraph_5 != blank %}
          <div class="timeline__spotlight-wrapper-5">
            <span class="ShopTheLook__Dot timeline__spotlight"></span>
              <div class="timeline__spotlight--hover-content">
                <span class="timeline__spotlight--title">{{ block.settings.hover_title_5 }}</span>
                <span class="timeline__spotlight--paragraph">{{ block.settings.hover_paragraph_5 }}</span>
              </div>
          </div>
        {% endif %}

        {% if block.settings.hover_title_6 != blank and block.settings.hover_paragraph_6 != blank %}
        <div class="timeline__spotlight-wrapper-6">
          <span class="ShopTheLook__Dot timeline__spotlight"></span>
          <div class="timeline__spotlight--hover-content">
            <span class="timeline__spotlight--title">{{ block.settings.hover_title_6 }}</span>
            <span class="timeline__spotlight--paragraph">{{ block.settings.hover_paragraph_6 }}</span>
          </div>
        </div>
        {% endif %}

        {% if block.settings.hover_title_7 != blank and block.settings.hover_paragraph_7 != blank %}
        <div class="timeline__spotlight-wrapper-7">
          <span class="ShopTheLook__Dot timeline__spotlight"></span>
          <div class="timeline__spotlight--hover-content">
            <span class="timeline__spotlight--title">{{ block.settings.hover_title_7 }}</span>
            <span class="timeline__spotlight--paragraph">{{ block.settings.hover_paragraph_7 }}</span>
          </div>
        </div>
        {% endif %}

            <div class="timeline__grid">

              <div class="Timeline__ImageWrapper timeline__image-wrapper{% if block.settings.apply_overlay %}Image--contrast{% endif %}">
              {%- if block.settings.image -%}
                <div class="Timeline__Image  timeline__image Image--lazyLoad hide-no-js" data-bgset="{{ block.settings.image | img_url: 'x650' }} [(max-width: 640px)] | {{ block.settings.image | img_url: '1000x' }}"></div>
                <noscript>
                  <div class="Timeline__Image timeline__image" style="background-image: url({{ block.settings.image | img_url: '1000x' }})"></div>
                </noscript>
              {%- else -%}
                <div class="Timeline__Image  timeline__image">
                  <div class="PlaceholderBackground">
                    {%- capture placeholder -%}{% cycle 'lifestyle-1', 'lifestyle-2' %}{%- endcapture -%}
                    {{ placeholder | placeholder_svg_tag: 'PlaceholderBackground__Svg PlaceholderSvg--dark' }}
                  </div>
                </div>
              {%- endif -%}
            </div>

            {%- capture section_inner -%}
              {%- if block.settings.subheading != blank or block.settings.heading != blank -%}
                <div class="timeline__content-wrapper">
                  <header class="Timeline__Header SectionHeader SectionHeader--center">
                    {%- if block.settings.subheading != blank -%}
                      <h3 class="SectionHeader__SubHeading Heading u-h6">{{ block.settings.subheading | escape }}</h3>
                    {%- endif -%}

                    {%- if block.settings.heading != blank -%}
                      <h2 class="timeline__content-title">{{ block.settings.heading | escape }}</h2>
                    {%- endif -%}

                    {%- if block.settings.content != blank -%}
                      <div class="timeline__content-paragraph">
                        {{ block.settings.content }}
                      </div>
                    {%- endif -%}
                  <a href="{{ block.settings.button_link }}" class="Button Button--primary timeline__button">
                  {{ block.settings.button_text | escape }}
                  </a>
                  </header>
                </div>
              {%- endif -%}
            {%- endcapture -%}

            {%- if section_inner -%}
              <div class="Timeline__Inner timeline__inner">
               {{ section_inner }}
              </div>
            {%- endif -%}

            </div>
            {% comment %} end of grid {% endcomment %}
          </div>
      {%- endfor -%}

      </div>

    </div>

  </div>

</section>

<script>
  $(window).on("load", function(){
    $(".Timeline__NavItem").click(function () {
      const bgColor = $(this).attr("data-color");
      const first_spotlight = $(".timeline__spotlight-wrapper-1");
      const second_spotlight = $(".timeline__spotlight-wrapper-2");
      const third_spotlight = $(".timeline__spotlight-wrapper-3");
      const fourth_spotlight = $(".timeline__spotlight-wrapper-4");
      const fifth_spotlight = $(".timeline__spotlight-wrapper-5");
      const sixth_spotlight = $(".timeline__spotlight-wrapper-6");
      const seventh_spotlight = $(".timeline__spotlight-wrapper-7");
      const width = $(window).width();

      {% comment %} SLEEP {% endcomment %}
      if((bgColor) == '#a597c0' && width > 800) {
        //first_spotlight.hide();
        second_spotlight.show();
        third_spotlight.show();
        fourth_spotlight.show()
        //fifth_spotlight.hide();
        sixth_spotlight.show();
        //seventh_spotlight.css("display" , "none");
      }

      {% comment %} RELIEF {% endcomment %}
      if((bgColor) == '#aed684' && width > 800){
        first_spotlight.show();
        second_spotlight.show();
        third_spotlight.show();
        fourth_spotlight.show();
        fifth_spotlight.show();
        sixth_spotlight.show();
        seventh_spotlight.css("display" , "inline-flex");
      }

      {% comment %} WELL {% endcomment %}
      if((bgColor) == '#ffcc50' && width > 800){
        first_spotlight.show();
        second_spotlight.show();
        //third_spotlight.hide();
        //fourth_spotlight.hide();
        fifth_spotlight.show()
        //sixth_spotlight.hide();
        //seventh_spotlight.css("display" , "none");
      }

      {% comment %} CALM {% endcomment %}
      if((bgColor) == '#7db8e9' && width > 800){
        first_spotlight.show();
        second_spotlight.show();
        third_spotlight.show();
        fourth_spotlight.show();
        fifth_spotlight.show()
        sixth_spotlight.show();
        seventh_spotlight.css("display" , "none");
      }
    });
  })
</script>

